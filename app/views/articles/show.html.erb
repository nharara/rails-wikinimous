<div class="container">
  <div class="card mt-3 justify-content-center shadow p-3" style="width: 25rem;">
    <div class="card-body">
    <h5 class="card-title"><%= @article['title'] %></h5>
    <p class="card-text"><%= @article['content'] %></p>

    <p>
      <%= link_to "⬅ Back to Articles", articles_path %>
      <%= link_to "✐ Edit Article", edit_article_path %>
      <%= link_to "🗑️ Delete Article", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "REallly?" } %>
    </p>

    </div>
  </div>
</div>
