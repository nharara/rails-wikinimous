<div class="container mt-3">
  <h1>Articles</h1>

<div class="cards">
  <% @articles.each do |article| %>
    <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
    <p class="card-text"><%= article.content %></p>
  <% end %>
</div>
<%= link_to "+ Add New Article", new_article_path%>
</div>
